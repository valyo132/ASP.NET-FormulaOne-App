@using FormulaOneApp.Web.ViewModels;
@model QuestionViewModel

<h1>@Model.Text</h1>
@if (Model.Media.Length > 0)
{
    <img src="data:image/png;base64,@Convert.ToBase64String(Model.Media)" alt="Question Image" />
}

<div>
    <input type="radio" value="@Model.WrongAnswerTwo" />
    <input type="radio" value="@Model.WrongAnswerOne" />
    <input type="radio" value="@Model.WrongAnswerThree" />
    <input type="radio" value="@Model.CorrectAnswer" />
</div>